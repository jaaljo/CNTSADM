@model IEnumerable<CNTS.Models.c_usuario>

@{
    Layout = "~/Views/Shared/_Layoutgmx.cshtml";
    ViewBag.Title = "";
}

<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Agregar", "Agregar", "Usuario", "", new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">Clave</th>
            <th class="search">Nombre</th>
            <th class="search">Puesto</th>
            <th class="search">¿Está Activo?</th>
            <th width="100"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_puesto)
                </td>
                <td>
                    @(item.esta_activo ? "Si" : "No")
                </td>
                <td>
                    @if (item.id_estatus_usuario == 4)
                    {
                        <a href="@Url.Action("unlockUser", new { id = item.id_usuario })">
                            <i class="glyphicon glyphicon-alert" title="Desbloquear"></i>
                        </a> @:|
                    }

                    <a href="@Url.Action("Edit", new { id = item.id_usuario })">
                        <i class="glyphicon glyphicon-pencil" title="Editar"></i>
                    </a> |
                    <a href="@Url.Action("AsignaRol", new { id = item.id_usuario })">
                        <i class="fa fa-list-alt fa-lg" title="Asignar roles"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_usuario })">
                        <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
