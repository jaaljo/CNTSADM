@model IEnumerable<CNTS.Models.c_rol>
@{
    Layout = "~/Views/Shared/_Layoutgmx.cshtml";
}
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<h2>Roles</h2>

<p>
    @Html.ActionLink("Agregar", "Agregar", "Rol","", new { @class = "btn btn-default btn-sm" })
</p>


<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="search">Clave</th>
            <th class="search">Nombre</th>
            <th width="100"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_rol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_rol)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_rol })">
                        <i class="glyphicon glyphicon-pencil" title="Editar"></i>
                    </a> |
                    <a href="@Url.Action("AsignaUsuarios", new { id = item.id_rol})">
                        <i class="fa fa-users fa-lg" title="Asignar Usuarios"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_rol })">
                        <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>