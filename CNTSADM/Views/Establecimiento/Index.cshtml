@model IEnumerable<CNTS.Models.v_establecimiento>

@{
    Layout = "~/Views/Shared/_Layoutgmx.cshtml";
    ViewBag.Title = "Establecimientos";
}

<h2>Establecimientos</h2>

<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Establecimiento</th>
            <th>Tipo</th>
            <th>Institución</th>
            <th>Entidad Federativa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo_establecimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nb_establecimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nb_tipo_establecimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nb_institucion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nb_entidad_federativa)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.id_establecimiento })">
                    <i class="glyphicon glyphicon-folder-open" title="Editar"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
