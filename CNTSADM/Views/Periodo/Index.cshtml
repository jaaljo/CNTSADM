@model IEnumerable<CNTS.Models.c_periodo>

@{
    Layout = "~/Views/Shared/_Layoutgmx.cshtml";
    ViewBag.Title = "";
}

<h2>Periodos</h2>

<p>
    @Html.ActionLink("Agregar", "Create", "Periodo", new { @class = "btn btn-default btn-sm" })
</p>
<table id="results" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Clave</th>
            <th>Periodo</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cl_periodo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nb_periodo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.esta_activo)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.id_periodo })">
                        <i class="glyphicon glyphicon-pencil" title="Editar"></i>
                    </a> |
                    <a href="@Url.Action("Delete", new { id = item.id_periodo })">
                        <i class="glyphicon glyphicon-trash" title="Borrar"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
